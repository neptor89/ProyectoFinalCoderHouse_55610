<div class="max-w-md mx-auto mt-8 bg-white p-8 rounded shadow-md">
  <h1 class="text-2xl font-bold mb-4">Change your password</h1>
  <p class="my-2 small">(Your new password can't be the same you used to have)</p>
  <form id="changePasswordForm">
    <label class="block mb-2">Password</label>
    <input
      type="password"
      name="password"
      class="w-full border p-2 mb-4"
      required
    />
    <label class="block mb-2">Confirm Password</label>
    <input
      type="password"
      name="confirm-password"
      class="w-full border p-2 mb-4"
      required
    />
    <input
      type="submit"
      value="Change password"
      class="bg-black rounded text-white px-4 py-2 cursor-pointer"
    />
  </form>
</div>
<script src="/js/changePassword.js"></script>